<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.examples.ffmpeg4android_demo_native"
      android:versionCode="1502"
      android:versionName="1.5.02">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
 
         
        <activity android:name="com.examples.ffmpeg4android_demo_native.SimpleExample" android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                  android:windowSoftInputMode="stateHidden"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />                
             </intent-filter>
        </activity>
        
        <activity android:name="com.examples.ffmpeg4android_demo_native.ProgressBarExample" android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                  android:windowSoftInputMode="stateHidden"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                 
             </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" /> 

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
</manifest> 